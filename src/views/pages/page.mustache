{{>partials/header}}


{{#banner}}
<section class="banner" style="background-image: url('images/{{background}}')"></section>
<h2>Conheça nossos produtos</h2>
{{/banner}}

<div class="container list">
{{#list}}
    <div class="item">
        <img src="images/{{image}}" class="item--image" />
        <div class="item--name">{{name}}</div>
        <div class="item--theme">Tema: {{theme}} </div>       
        <div class="item--genre">Gênero: {{genre}}</div>
    </div>
{{/list}}

</div>

{{^list}}
<div class="container no-list">
    <h2>Produto não encontrado</h2>
</div>
{{/list}}
{{>partials/footer}}